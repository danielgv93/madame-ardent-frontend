---
import madameArdent from '../assets/madame-ardent.svg';
---
<!-- Navbar component with scroll shrink and mobile fullscreen menu -->
<nav id="navbar" class="fixed top-0 left-0 w-full h-16 bg-white transition-all duration-300 ease-in-out z-50">
    <div class="max-w-7xl mx-auto px-4 flex items-center justify-between h-full">
        <!-- Logo -->
        <div class="flex-shrink-0">
            <a href="/">
                <img src={madameArdent.src} alt="Logo" class="h-8 w-auto" />
            </a>
        </div>

        <!-- Desktop navigation -->
        <div class="hidden md:flex space-x-8">
            <a href="#home" class="text-gray-800 hover:text-gray-600">Home</a>
            <a href="#about" class="text-gray-800 hover:text-gray-600">About</a>
            <a href="#services" class="text-gray-800 hover:text-gray-600">Services</a>
            <a href="#contact" class="text-gray-800 hover:text-gray-600">Contact</a>
        </div>

        <!-- Mobile hamburger -->
        <div class="md:hidden">
            <button id="menu-btn" aria-label="Toggle menu" class="focus:outline-none">
                <!-- Hamburger icon -->
                <svg class="h-6 w-6 text-gray-800" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </div>
    </div>
</nav>

<!-- Mobile fullscreen menu -->
<div id="mobile-menu" class="fixed inset-0 bg-white flex flex-col items-center justify-center space-y-8 transform scale-0 transition-transform duration-300 ease-in-out z-40">
    <button id="close-btn" aria-label="Close menu" class="absolute top-4 right-4 focus:outline-none">
        <!-- Close icon -->
        <svg class="h-6 w-6 text-gray-800" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
    </button>
    <a href="#home" class="text-2xl text-gray-800 hover:text-gray-600">Home</a>
    <a href="#about" class="text-2xl text-gray-800 hover:text-gray-600">About</a>
    <a href="#services" class="text-2xl text-gray-800 hover:text-gray-600">Services</a>
    <a href="#contact" class="text-2xl text-gray-800 hover:text-gray-600">Contact</a>
</div>

<script type="module">
    const navbar = document.getElementById('navbar');
    const mobileMenu = document.getElementById('mobile-menu');
    const menuBtn = document.getElementById('menu-btn');
    const closeBtn = document.getElementById('close-btn');

    // Ajusta altura y opacidad según posición de scroll
    window.addEventListener('scroll', () => {
        if (window.pageYOffset === 0) {
            // En top: altura completa y opacidad total
            navbar.classList.remove('h-12', 'bg-white/50');
            navbar.classList.add('h-16', 'bg-white');
        } else {
            // En cualquier otro punto: más bajo y semitransparente
            navbar.classList.add('h-12', 'bg-white/50');
            navbar.classList.remove('h-16', 'bg-white');
        }
    });

    // Abrir y cerrar menú móvil
    menuBtn.addEventListener('click', () => {
        mobileMenu.classList.remove('scale-0');
        mobileMenu.classList.add('scale-100');
    });

    closeBtn.addEventListener('click', () => {
        mobileMenu.classList.remove('scale-100');
        mobileMenu.classList.add('scale-0');
    });
</script>