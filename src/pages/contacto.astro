---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import Input from '../components/Input.astro';
import Label from '../components/Label.astro';
import Select from '../components/Select.astro';
import Textarea from '../components/Textarea.astro';
import Alert from '../components/Alert.astro';
---

<Layout title="Contacto - Madame Ardent">
  <main class="min-h-[calc(100vh-6rem)] bg-gradient-to-br from-purple-50 to-pink-50 pt-12">
    <div class="container mx-auto px-4 max-w-2xl">
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-2 text-center">Contáctanos</h1>
        <p class="text-gray-600 text-center mb-8">Solicita nuestros servicios de diseño de portadas</p>
        
        <form id="contact-form" class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <Label for="name" required>Nombre</Label>
              <Input
                type="text"
                id="name"
                name="name"
                required
              />
            </div>
            
            <div>
              <Label for="user" required>Usuario</Label>
              <Input
                type="text"
                id="user"
                name="user"
                required
              />
            </div>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <Label for="email" required>Correo electrónico</Label>
              <Input
                type="email"
                id="email"
                name="email"
                required
              />
            </div>
            
            <div>
              <Label for="country" required>País</Label>
              <Input
                type="text"
                id="country"
                name="country"
                required
              />
            </div>
          </div>
          
          <div>
            <Label for="services" required>Servicios requeridos</Label>
            <Select
              id="services"
              name="services"
              required
            >
              <option value="">Selecciona un servicio</option>
              <option value="Diseño de portada completa">Diseño de portada completa</option>
              <option value="Rediseño de portada existente">Rediseño de portada existente</option>
              <option value="Diseño de contraportada">Diseño de contraportada</option>
              <option value="Diseño de lomo">Diseño de lomo</option>
              <option value="Diseño completo (portada + contraportada + lomo)">Diseño completo (portada + contraportada + lomo)</option>
              <option value="Consultoría de diseño">Consultoría de diseño</option>
              <option value="Otro">Otro</option>
            </Select>
          </div>
          
          <div>
            <Label for="message" required>Mensaje</Label>
            <Textarea
              id="message"
              name="message"
              rows={5}
              required
              placeholder="Describe tu proyecto, presupuesto, plazos y cualquier detalle importante..."
            />
          </div>
          
          <div class="text-center">
            <Button
              type="submit"
              variant="primary"
              size="lg"
            >
              Enviar solicitud
            </Button>
          </div>
        </form>
        
        <Alert id="success-message" variant="success" hidden>
          ¡Mensaje enviado correctamente! Te contactaremos pronto.
        </Alert>
        
        <Alert id="error-message" variant="error" hidden>
          Error al enviar el mensaje. Por favor, inténtalo de nuevo.
        </Alert>
      </div>
    </div>
  </main>
</Layout>

<script>
  import { ContactFormHandler } from '../lib/contact-form';
  
  document.addEventListener('DOMContentLoaded', () => {
    new ContactFormHandler('contact-form');
  });
</script>