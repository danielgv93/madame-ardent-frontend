---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contacto - Madame Ardent">
  <main class="min-h-screen bg-gradient-to-br from-purple-50 to-pink-50 py-12">
    <div class="container mx-auto px-4 max-w-2xl">
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-2 text-center">Contáctanos</h1>
        <p class="text-gray-600 text-center mb-8">Solicita nuestros servicios de diseño de portadas</p>
        
        <form id="contact-form" class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                Nombre *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
              />
            </div>
            
            <div>
              <label for="user" class="block text-sm font-medium text-gray-700 mb-2">
                Usuario *
              </label>
              <input
                type="text"
                id="user"
                name="user"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
              />
            </div>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                Correo electrónico *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
              />
            </div>
            
            <div>
              <label for="country" class="block text-sm font-medium text-gray-700 mb-2">
                País *
              </label>
              <input
                type="text"
                id="country"
                name="country"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
              />
            </div>
          </div>
          
          <div>
            <label for="services" class="block text-sm font-medium text-gray-700 mb-2">
              Servicios requeridos *
            </label>
            <select
              id="services"
              name="services"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
            >
              <option value="">Selecciona un servicio</option>
              <option value="Diseño de portada completa">Diseño de portada completa</option>
              <option value="Rediseño de portada existente">Rediseño de portada existente</option>
              <option value="Diseño de contraportada">Diseño de contraportada</option>
              <option value="Diseño de lomo">Diseño de lomo</option>
              <option value="Diseño completo (portada + contraportada + lomo)">Diseño completo (portada + contraportada + lomo)</option>
              <option value="Consultoría de diseño">Consultoría de diseño</option>
              <option value="Otro">Otro</option>
            </select>
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
              Mensaje *
            </label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              placeholder="Describe tu proyecto, presupuesto, plazos y cualquier detalle importante..."
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent resize-vertical"
            ></textarea>
          </div>
          
          <div class="text-center">
            <button
              type="submit"
              class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-md transition duration-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2"
            >
              Enviar solicitud
            </button>
          </div>
        </form>
        
        <div id="success-message" class="hidden mt-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded-md">
          ¡Mensaje enviado correctamente! Te contactaremos pronto.
        </div>
        
        <div id="error-message" class="hidden mt-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-md">
          Error al enviar el mensaje. Por favor, inténtalo de nuevo.
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  import { ContactFormHandler } from '../lib/contact-form';
  
  document.addEventListener('DOMContentLoaded', () => {
    new ContactFormHandler('contact-form');
  });
</script>